.panel-buttons
  display: flex
  flex-wrap: wrap-reverse
  justify-content: space-between
  padding: 30px 40px
  border-radius: 0px 0px 15px 15px
  background-color: lightgreen

  &__button
    display: flex
    justify-content: center
    align-items: center
    width: 70px
    height: 70px
    font-size: 30px
    border-radius: 50%
    background-color: orange

    &:nth-child(n+3)
      margin-bottom: 20px
