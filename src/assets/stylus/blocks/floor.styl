.floor
  position: relative
  display: flex
  justify-content: center
  align-items: flex-end
  width: 100%
  height: 100px
  border-bottom: 1px solid black
  background-color: blue

  &__number
    position: absolute
    top: 20%
    left: 3%
    display: flex
    justify-content: center
    align-items: center
    padding: 2px 5px
    font-weight: 700
    border-radius: 4px
    background-color: yellow
